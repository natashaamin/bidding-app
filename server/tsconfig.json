{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "skipLibCheck":true
  },
  "include": [
    "./*.ts",
  ],
  "exclude": ["node_modules"]
}
